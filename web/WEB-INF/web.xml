<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <welcome-file-list>
        <welcome-file>/WEB-INF/welcome.jsp</welcome-file>
        <!--<welcome-file>/UI/sign</welcome-file>-->
    </welcome-file-list>
    
    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>cn.creditmanage.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--uiServlet转发UI-->
    <servlet>
        <servlet-name>uiServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.UIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uiServlet</servlet-name>
        <url-pattern>/UI/*</url-pattern>
    </servlet-mapping>
    <!--studentServlet-->
    <servlet>
        <servlet-name>studentServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentServlet</servlet-name>
        <url-pattern>/student/*</url-pattern>
    </servlet-mapping>
    <!--learningServlet-->
    <servlet>
        <servlet-name>learningServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.LearningServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>learningServlet</servlet-name>
        <url-pattern>/learning/*</url-pattern>
    </servlet-mapping>
    <!--basicServlet-->
    <servlet>
        <servlet-name>basicServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.BasicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>basicServlet</servlet-name>
        <url-pattern>/basic/*</url-pattern>
    </servlet-mapping>
    <!--reputationServlet-->
    <servlet>
        <servlet-name>reputationServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.ReputationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reputationServlet</servlet-name>
        <url-pattern>/reputation/*</url-pattern>
    </servlet-mapping>
    <!--rewardPunishmentServlet-->
    <servlet>
        <servlet-name>rewardPunishmentServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.RewardPunishmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rewardPunishmentServlet</servlet-name>
        <url-pattern>/reward/*</url-pattern>
    </servlet-mapping>
    <!--trustServlet-->
    <servlet>
        <servlet-name>trustServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.TrustServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>trustServlet</servlet-name>
        <url-pattern>/trust/*</url-pattern>
    </servlet-mapping>
    <!--allServlet-->
    <servlet>
        <servlet-name>allServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.AllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allServlet</servlet-name>
        <url-pattern>/all/*</url-pattern>
    </servlet-mapping>
    <!--loginServlet-->
    <servlet>
        <servlet-name>logServlet</servlet-name>
        <servlet-class>cn.creditmanage.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logServlet</servlet-name>
        <url-pattern>/log/*</url-pattern>
    </servlet-mapping>
</web-app>